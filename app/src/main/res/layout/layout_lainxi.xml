<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
<include layout="@layout/main_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="211dp"
                android:layout_gravity="left"
                android:background="@mipmap/contact_us"
                android:textColor="@color/black"
                android:textSize="@dimen/space_28" />


        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="vertical">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="5dip"
                        android:background="@mipmap/phone" />

                    <TextView
                        android:id="@+id/contact_us_number1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:text="13387755555"
                        android:textColor="@color/black"
                        android:textSize="@dimen/space_20" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dip"
                        android:gravity="center"
                        android:text="/"
                        android:textColor="@color/black"
                        android:textSize="@dimen/space_18" />

                    <TextView
                        android:id="@+id/contact_us_number2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:text="13387756666"
                        android:textColor="@color/black"
                        android:textSize="@dimen/space_18" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="5dip"
                        android:background="@mipmap/qq" />

                    <TextView
                        android:id="@+id/contact_us_qq"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="49876666"
                        android:textColor="@color/black"
                        android:textSize="@dimen/space_18" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="5dip"
                        android:background="@mipmap/weixin" />

                    <TextView
                        android:id="@+id/contact_us_weixin"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="顺忠租赁"
                        android:textColor="@color/black"
                        android:textSize="@dimen/space_18" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
</LinearLayout>